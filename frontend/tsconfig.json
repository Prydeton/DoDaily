
 

{
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      "/*": ["./*"]
    },
    "baseUrl": "./",
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir":"./dist",
    "types": ["node", "vite/client"],
    "lib": ["ES2019", "DOM", "DOM.Iterable"]
  },
  "exclude": [
    "**/node_modules/*",
    "**/dist/*",
    "**/.git/*",
  ],
}